package com.swm.converter;

import org.springframework.stereotype.Component;

import com.swm.dto.RoleDto;
import com.swm.entity.RoleEntity;
import com.swm.enums.AccountRole;

@Component
public class RoleConverter {
	
	public RoleEntity entityConverter(RoleDto role) {
		RoleEntity roleEntity = new RoleEntity();
		roleEntity.setName(AccountRole.valueOf(role.getName()).name());
		if(role.getCreatedBy() != null) {
			roleEntity.setCreatedBy(role.getCreatedBy());
		}
		return roleEntity;
	}
	
	public RoleDto dtoConverter(RoleEntity role) {
		RoleDto roleDto = new RoleDto();
		roleDto.setName(AccountRole.valueOf(role.getName()).name());
		if(role.getCreatedBy() != null) {
			roleDto.setCreatedBy(role.getCreatedBy());
		}
		
		return roleDto;
	}
}
