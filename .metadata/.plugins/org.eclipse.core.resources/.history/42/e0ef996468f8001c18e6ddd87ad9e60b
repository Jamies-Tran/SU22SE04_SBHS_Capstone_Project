import com.swm.entity.HomestayEntity;

public interface IHomestayService {
	
	Optional<HomestayEntity> findHomestayByName(String name);
	
	Optional<List<HomestayEntity>> findLandlordHomestayList();
	
	HomestayEntity createHomestay(HomestayEntity homestay);
	
	HomestayEntity deleteHomestayById(Long Id);
	
	HomestayEntity updateHomestay(Long Id, HomestayEntity newHomestayInf);
	
}
