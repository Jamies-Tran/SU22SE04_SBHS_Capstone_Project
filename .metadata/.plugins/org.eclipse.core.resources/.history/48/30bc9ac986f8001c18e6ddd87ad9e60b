package com.swm.converter;

import java.util.List;
import java.util.stream.Collectors;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import com.swm.dto.HomestayDto;
import com.swm.entity.HomestayAftercareEntity;
import com.swm.entity.HomestayEntity;

@Component
public class HomestayConverter {

	@Autowired
	private HomestayAftercareConverter homestayAftercareConvert;

	public HomestayEntity homestayEntityConverte(HomestayDto homestayDto) {
		HomestayEntity homestayEntity = new HomestayEntity();
		homestayEntity.setName(homestayDto.getName());
		homestayEntity.setLocation(homestayDto.getLocation());
		homestayEntity.setPrice(homestayDto.getPrice());
		List<HomestayAftercareEntity> serviceLsit = homestayDto.getHomestayServices().stream()
				.map(srv -> homestayAftercareConvert.homestayAftercareEntityConvert(srv)).collect(Collectors.toList());
		homestayEntity.setHomestayService(serviceLsit);
	}
}
